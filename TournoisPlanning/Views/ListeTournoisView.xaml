<UserControl x:Class="TournoisPlanning.Views.ListeTournoisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F8">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Tournaments" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <Button Grid.Column="1" Content="Create Tournament" Background="#8C52FF" Foreground="White"
                    Padding="12,8" BorderThickness="0" Click="createTournois_Click" Tag="{Binding}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- Scrollable tournament list -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding Tournois}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" Width="300" Height="220" Margin="10" 
                                    BorderThickness="1" BorderBrush="#E5E5E5" CornerRadius="10">
                                <Grid Margin="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Ellipse Grid.Row="0" Width="40" Height="40" Fill="#F0F0F0" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Row="1" Text="{Binding Nom}" FontWeight="SemiBold" FontSize="16" 
                                               Margin="0,15,0,5" TextWrapping="Wrap"/>
                                    <TextBlock Grid.Row="2" Text="{Binding Saison, StringFormat='Season: {0}'}" 
                                               Foreground="#777777" FontSize="12" Margin="0,0,0,10"/>

                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Completion" Foreground="#777777" FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Completion, StringFormat='{}{0}%'}" 
                                                   Foreground="#777777" FontSize="12" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>

                                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="Next match:" FontSize="12" Foreground="#777777" Margin="0,0,5,0"/>
                                        <TextBlock FontSize="12" Foreground="#777777">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} VS {1}">
                                                    <Binding Path="ProchainMatch.Equipe1.Nom"/>
                                                    <Binding Path="ProchainMatch.Equipe2.Nom"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>

                                    <Grid Grid.Row="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" Content="View" Padding="15,5" 
                                                Background="Transparent" Foreground="#555555"
                                                BorderThickness="0" Tag="{Binding}" Click="VoirTournoi_Click"/>

                                        <Button Grid.Column="2" Content="Manage" Padding="15,5" 
                                                Background="#8C52FF" Foreground="White"
                                                BorderThickness="0">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
